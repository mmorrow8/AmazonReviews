@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loading...</title>
</head>
<body>
    <div style="text-align: center; margin-top: 20%;">
        <h1>Loading, please wait...</h1>
    </div>

    <script>
        // Poll the server periodically to check if the data is loaded
        async function checkLoaded() {
            const response = await fetch('/');
            if (response.ok) {
                const text = await response.text();
                if (!text.includes("Loading, please wait...")) {
                    window.location.reload(); // Reload the page when data is loaded
                }
            }
        }

        setInterval(checkLoaded, 2000); // Poll every 2 seconds
    </script>
</body>
</html>
